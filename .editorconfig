root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
quote_type = 'single'

[*.json]
indent_size = 2
quote_type = 'double'

[*.yml]
indent_size = 2
quote_type = 'double'

[*.md]
indent_size = 4
insert_final_newline = false

[Makefile]
indent_style = space
indent_size = 8
